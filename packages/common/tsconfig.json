{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "inlineSourceMap": true,
      "skipLibCheck": true,
      "outDir": "dist",
      "rootDir": "src",
      "baseUrl": "./",
      "composite": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/__tests__/*", "**/__e2e__/*"]
  }